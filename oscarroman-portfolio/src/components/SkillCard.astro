---
interface Props {
  title: string;
  icon: string;
  skills: string[];
}

const { title, icon, skills } = Astro.props;
---

<article class="skill-card bg-card-dark rounded-2xl p-8 transition-all hover:scale-105 hover:shadow-2xl">
  <!-- Icon -->
  <div class="text-accent-yellow text-5xl mb-6">
    <i class={`bi bi-${icon}`}></i>
  </div>
  
  <!-- Title -->
  <h3 class="text-2xl font-bold mb-4 text-white">{title}</h3>
  
  <!-- Skills List -->
  <ul class="space-y-2">
    {skills.map(skill => (
      <li class="flex items-center gap-2 text-gray-300">
        <span class="text-accent-yellow text-xs">â–¸</span>
        <span>{skill}</span>
      </li>
    ))}
  </ul>
</article>
