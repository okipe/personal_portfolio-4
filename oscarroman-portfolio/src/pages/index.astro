---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SkillCard from '../components/SkillCard.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import heroImage from '../assets/hero-img-slider.svg';
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  </head>
  <body class="bg-primary-dark text-white font-sans">
    <Header />
    
    <main class="max-w-[1200px] mx-auto px-8">
      
      <!-- Hero Section -->
      <section class="hero my-20">
  <div class="grid grid-cols-1 md:grid-cols-[2fr_3fr] gap-8 items-center">
    
    <!-- Left Column - Texto -->
    <div class="hero__left text-center md:text-left">
      <h1 class="text-5xl lg:text-6xl font-bold mb-5 leading-tight">
        Hola, soy<br/>
        <span class="text-white">Oscar Román</span>
      </h1>
      
      <p class="text-2xl lg:text-3xl mb-12 font-medium">
        Technology Specialist
      </p>
      
      <p class="text-lg text-gray-300 mb-8">
        Infraestructura · Web · Cloud
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center md:justify-start md:items-start gap-6">

        <!-- Download CV Button -->
        <a 
          href="/cv-oscar-roman-2026.pdf" 
          class="bg-accent-yellow text-black font-bold py-3 px-6 rounded-2xl no-underline hover:bg-yellow-400 transition inline-block"
          target="_blank"
        >
          Descargar CV
        </a>
        
        <!-- Social Icons -->
        <div class="flex gap-5">
          <a href="https://github.com/okipe/" target="_blank" rel="noopener noreferrer">
            <svg viewBox="0 0 16 16" class="w-8 h-8 fill-white hover:fill-accent-yellow transition">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/oscarroman1/" target="_blank" rel="noopener noreferrer">
            <svg viewBox="0 0 24 24" class="w-8 h-8 fill-white hover:fill-accent-yellow transition">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
          <a href="https://www.behance.net/oki_pe" target="_blank" rel="noopener noreferrer">
            <svg viewBox="0 0 24 24" class="w-8 h-8 fill-white hover:fill-accent-yellow transition">
              <path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Right Column - Imagen hero (OCULTA en móvil) -->
    <div class="hero__right hidden md:flex justify-center items-center">
      <img 
        src={heroImage.src} 
        alt="Oscar Román - Infrastructure & Cloud Engineer trabajando con terminal Linux, Docker y automatización DevOps" 
        class="w-full h-auto rounded-2xl"
        width="920"
        height="585"
        loading="eager"
      />
    </div>
    
  </div>
</section>

      <!-- Projects Section -->
      <section id="proyectos" class="my-24">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Proyectos Destacados</h2>
          <p class="text-gray-300 text-lg max-w-2xl mx-auto">
            Implementaciones en infraestructura, desarrollo web y plataformas tecnológicas
          </p>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Project 1: Moodle -->
          <ProjectCard 
            title="Plataforma Moodle de Derechos Humanos"
            description="Gestión técnica y soporte de plataforma LMS Moodle para cursos virtuales para el público general. Administración de usuarios, contenidos y análisis de datos de participación."
            tags={['Linux', 'MySQL', 'Moodle', 'PHP']}
          />

          <!-- Project 2: Efficace -->
          <ProjectCard 
            title="Efficace Laboral - Sitio Corporativo"
            description="Desarrollo frontend de sitio web corporativo con HTML5, SCSS y Bootstrap. Diseño responsivo y optimizado para conversión."
            tags={['HTML', 'SCSS', 'Bootstrap', 'JavaScript']}
            link="https://github.com/okipe/website-efficace-4-bootstrap"
          />

          <!-- Project 3: Streaming -->
          <ProjectCard 
            title="Ejecución de Streaming para redes sociales"
            description="Coordinación técnica y ejecución de +250 webinars durante pandemia COVID-19. Gestión de plataformas Zoom, StreamYard y OBS Studio."
            tags={['Zoom', 'OBS', 'StreamYard', 'Event Management']}
          />

          <!-- Project 5: WordPress -->
          <ProjectCard 
            title="Human Perú - WordPress Multisite"
            description="Implementación de sitio WordPress para organización de bienestar social. Customización de tema y optimización SEO."
            tags={['WordPress', 'PHP', 'SEO', 'CPanel']}
          />

          <!-- Project 6: Cloud Lab -->
          <ProjectCard 
            title="Personal Cloud Lab"
            description="Laboratorio personal de aprendizaje con VirtualBox y KVM. Práctica de administración de sistemas Linux y redes."
            tags={['Linux', 'VirtualBox', 'KVM', 'Networking']}
          />

          <!-- Project 4: Impact -->
            <ProjectCard 
              title="ISC 2024 - Web de concurso de startups"
              description="Diseño y desarrollo de sitio web para competencia de emprendimientos usando Webflow. Enfoque en UX/UI y optimización de conversión."
              tags={['Webflow', 'UI/UX', 'No-code']}
              link="https://www.behance.net/gallery/206918725/WebFlow-Website-for-Impact-Startup-Competition"
            />

        </div>

          
      </section>

      <!-- About Me Section -->
      <section id="sobre-mi" class="my-24">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Sobre mí</h2>
          <p class="text-gray-300 text-lg max-w-3xl mx-auto">
            De comunicador digital a ingeniero de sistemas: combinando experiencia en plataformas tecnológicas con conocimientos técnicos y de gestión para crear soluciones innovadoras.
          </p>
        </div>

        <!-- Bio Content -->
        <div class="max-w-4xl mx-auto mb-16">
          <div class="bg-card-dark rounded-2xl p-8 md:p-12">
            <div class="prose prose-lg prose-invert max-w-none">
              <p class="text-gray-300 leading-relaxed mb-6 text-lg">
                Soy <strong class="text-white">estudiante de Ingeniería de Sistemas</strong> (último año) y comunicador digital con más de <strong class="text-accent-yellow">10 años de experiencia profesional previa</strong> en 
                tecnología, producción de contenidos, plataformas digitales y capacitación en tecnología. 
                Tengo capacidad para adaptarme rápidamente y destacar en múltiples dominios técnicos, incluyendo gestión de infraestructura, desarrollo web, soporte TI y automatización, con habilidades blandas avanzadas en gestión de stakeholders, documentación y capacitación de usuarios.
              </p>
              
              <p class="text-gray-300 leading-relaxed mb-6 text-lg">
                Mi curiosidad por la tecnología me llevó a estudiar <strong class="text-white">Ingeniería de Sistemas Computacionales</strong>. Actualmente enfocado en rutas de Cloud/DevOps (Linux/Docker), pero igualmente capaz y motivado para contribuir en roles de Soporte TI, QA, Gestión de Producto Asistente, Desarrollo Web o implementación de IA/ML donde pueda <strong class="text-accent-yellow">aprovechar mi combinación única de habilidades técnicas, agilidad de aprendizaje y experiencia en gestión de stakeholders</strong>.
              </p>
              
              
            </div>
          </div>
        </div>

        <!-- Skills Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          
          <!-- Skill 1: Infrastructure -->
          <SkillCard 
            title="Infraestructura & Sistemas"
            icon="hdd-rack"
            skills={[
              'Linux (Desktop, Server)',
              'MySQL / Databases',
              'VirtualBox / KVM',
              'Redes informáticas',
              'CPanel'
            ]}
          />

          <!-- Skill 2: Cloud & DevOps -->
          <SkillCard 
            title="Cloud & DevOps"
            icon="cloud"
            skills={[
              'Git / GitHub',
              'CI/CD pipelines',
              'Docker (aprendiendo)',
              'Bash scripting',
              'Deployment automation'
            ]}
          />

          <!-- Skill 3: Development -->
          <SkillCard 
            title="Development"
            icon="code-slash"
            skills={[
              'HTML, CSS, SCSS',
              'JavaScript, TypeScript',
              'Angular, Spring Boot',
              'WordPress, Webflow',
              'Bootstrap, Tailwind'
            ]}
          />

          <!-- Skill 4: EdTech -->
          <SkillCard 
            title="EdTech"
            icon="book"
            skills={[
              'Moodle (producción)',
              'Thinkific',
              'LMS Design',
              'Instructional Design',
              'Technical Training'
            ]}
          />

        </div>
      </section>

      <!-- Contact Section -->
      <section id="contacto" class="my-24">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Contacto</h2>
          <p class="text-gray-300 text-lg max-w-2xl mx-auto">
            ¿Tienes un proyecto en mente? ¿Buscas colaborar en infraestructura o EdTech? 
            Me encantaría escucharte
          </p>
        </div>

        <!-- Contact Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          
          <!-- Email -->
          <a 
            href="mailto:oscarroman.pe@gmail.com"
            class="contact-card bg-card-dark rounded-2xl p-8 text-center transition-all hover:scale-105 hover:shadow-2xl no-underline group"
          >
            <div class="text-accent-yellow text-5xl mb-4 group-hover:scale-110 transition">
              <i class="bi bi-envelope"></i>
            </div>
            <h3 class="text-xl font-bold mb-2 text-white">Email</h3>
            <p class="text-gray-300">oscarroman.pe@yahoo.com</p>
          </a>

          <!-- LinkedIn -->
          <a 
            href="https://www.linkedin.com/in/oscarroman1/"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-card bg-card-dark rounded-2xl p-8 text-center transition-all hover:scale-105 hover:shadow-2xl no-underline group"
          >
            <div class="text-accent-yellow text-5xl mb-4 group-hover:scale-110 transition">
              <i class="bi bi-linkedin"></i>
            </div>
            <h3 class="text-xl font-bold mb-2 text-white">LinkedIn</h3>
            <p class="text-gray-300">@oscarroman1</p>
          </a>

          <!-- GitHub -->
          <a 
            href="https://github.com/okipe/"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-card bg-card-dark rounded-2xl p-8 text-center transition-all hover:scale-105 hover:shadow-2xl no-underline group"
          >
            <div class="text-accent-yellow text-5xl mb-4 group-hover:scale-110 transition">
              <i class="bi bi-github"></i>
            </div>
            <h3 class="text-xl font-bold mb-2 text-white">GitHub</h3>
            <p class="text-gray-300">@okipe</p>
          </a>

        </div>
      </section>
      
    </main>
    
    <Footer />
  </body>
</html>
